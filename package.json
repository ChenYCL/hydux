{
  "name": "hydux",
  "version": "0.4.2",
  "description": "An elm-like state manager inspired by Hyperapp, Elmish, Elm, Redux, etc. Working with any vdom library!",
  "main": "./lib/index.js",
  "typings": "./lib/index",
  "types": "./lib/index",
  "jsnext:main": "./es/index.js",
  "module": "./es/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "del lib && tsc -d && cpy './src/**/*.js.flow' ./lib --parents",
    "build:es": "del es && tsc -d -m es6 --outDir ./es",
    "build:dist": "webpack -p --progress --profile",
    "test": "mocha --require ts-node/register \"src/test/**/*.ts\"",
    "test:watch": "npm run test -- -w --watch-extensions ts,tsx",
    "doc": "typedoc --theme minimal --exclude \"**/test/*.ts\"  --excludeNotExported --excludePrivate --out ./docs/api ./src && touch ./docs/.nojekyll",
    "build:all": "run-s build build:dist build:es",
    "preversion": "npm run test && npm run build:all && git add -A"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hydux/hydux.git"
  },
  "keywords": [
    "elm",
    "hyperapp",
    "redux",
    "flux",
    "react",
    "picodom"
  ],
  "author": "Zack Young",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hydux/hydux/issues"
  },
  "homepage": "https://github.com/hydux/hydux#readme",
  "devDependencies": {
    "@types/mocha": "^5.1.0",
    "@types/node": "^9.6.2",
    "awesome-typescript-loader": "^3.4.1",
    "clean-webpack-plugin": "^0.1.17",
    "cpy-cli": "^1.0.1",
    "cross-env": "^5.1.1",
    "debug": "^3.1.0",
    "del-cli": "^1.1.0",
    "espower-typescript": "^8.1.2",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.2",
    "power-assert": "^1.4.4",
    "pre-commit": "^1.2.2",
    "source-map-loader": "^0.2.3",
    "timekeeper": "^2.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.8.1",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "tslib": "^1.8.1",
    "ultradom": "^2.0.0"
  },
  "optionalDependencies": {
    "remotedev": "^0.2.7"
  }
}
